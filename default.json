{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prCreation": "immediate",
  "dependencyDashboard": true,
  "prConcurrentLimit": 10,
  "prHourlyLimit": 5,
  "prTitle": "chore(deps): bump {{depName}} from {{currentVersion}} to {{newVersion}} ({{updateType}})",
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "labels": ["dependency/patch"]
    },
    {
      "matchUpdateTypes": ["minor"],
      "labels": ["dependency/minor"]
    },
    {
      "matchUpdateTypes": ["major"],
      "labels": ["dependency/major"]
    },
    {
      "matchUpdateTypes": ["pin", "digest", "lockFileMaintenance"],
      "labels": ["dependency/other"]
    },
    {
      "matchManagers": ["npm", "yarn", "pnpm", "dockerfile"],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "separateMajorMinor": true,
      "separateMinorPatch": true,
      "prBodyNotes": [
        "This PR upgrades one or more dependencies.",
        "Old → New versions are listed below.",
        "Check changelogs/releases for details.",
        "⚠️ Major updates may include breaking changes.",
        "✅ Please ensure CI passes before merging."
      ]
    },
    {
      "matchUpdateTypes": ["major", "minor", "patch"],
      "automerge": false
    },
    {
     "matchManagers": ["npm", "yarn"],
     "matchDepTypes": ["dependencies"],
     "labels": ["security"],
     "description": "Label security-related dependency updates"
    }
  ]
}
